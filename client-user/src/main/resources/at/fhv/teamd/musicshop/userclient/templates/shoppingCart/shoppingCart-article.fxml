      </Pane>
      <Button mnemonicParsing="false" onAction="#remove" prefWidth="30.0" style="-fx-background-color: red;" text="X" GridPane.columnIndex="4" />
   </children>
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
