<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<TabPane fx:id="tabs" nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#onKeyPressed" pickOnBounds="false" prefHeight="800.0" prefWidth="1000.0" style="-fx-tab-min-width: 10em; -fx-font-size: 13; -fx-base: #000000FF; -fx-text-box-border: #000000FF; -fx-color: #000000FF; -fx-box-border: #000000FF; -fx-outer-border: #000000FF;" tabMaxHeight="50.0" tabMaxWidth="120.0" tabMinHeight="50.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.teamd.musicshop.userclient.view.AppController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <tabs>
      <Tab fx:id="searchTab" closable="false" style="-fx-background-color: #7565fd; -fx-background-radius: 4; -fx-border-color: #000000; -fx-border-radius: 4; -fx-border-width: 3; -fx-focus-color: #FFFFFF; -fx-faint-focus-color: #FFFFFF;" text="Search">
         <content>
            <fx:include source="searchArticle/search.fxml" />
         </content>
         <graphic>
            <FontAwesomeIconView fill="#FFFFFF" glyphName="SEARCH" size="20" />
         </graphic>
      </Tab>
      <Tab closable="false" style="-fx-background-color: #4251b3; -fx-background-radius: 4; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 4; -fx-focus-color: #FFFFFF; -fx-faint-focus-color: #FFFFFF;" text="Return">
         <content>
            <fx:include source="returnArticle/return.fxml" />
         </content>
