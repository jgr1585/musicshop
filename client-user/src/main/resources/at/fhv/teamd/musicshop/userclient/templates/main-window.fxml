            <FontAwesomeIconView fill="#FFFFFF" glyphName="UNDO" size="20" />
         </graphic>
      </Tab>
      <Tab closable="false" onSelectionChanged="#loadOnSelection" style="-fx-background-color: #488af3; -fx-background-radius: 4; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 4; -fx-focus-color: #FFFFFF; -fx-faint-focus-color: #FFFFFF;" text="Shopping Cart">
         <content>
            <fx:include fx:id="shoppingCart" source="shoppingCart/shoppingCart.fxml" />
         </content>
         <graphic>
            <FontAwesomeIconView fill="#FFFFFF" glyphName="SHOPPING_CART" size="20" />
         </graphic>
      </Tab>
      <Tab closable="false" style="-fx-background-color: #0261bf; -fx-background-radius: 4; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 4; -fx-focus-color: #FFFFFF; -fx-faint-focus-color: #FFFFFF;" text="New Message">
         <content>
            <fx:include source="writeMessage/write-message.fxml" />
         </content>
         <graphic>
            <FontAwesomeIconView fill="#FFFFFF" glyphName="EDIT" size="20" />
         </graphic>
      </Tab>
      <Tab closable="false" style="-fx-background-color: #6c359b; -fx-background-radius: 4; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 4; -fx-focus-color: #FFFFFF; -fx-faint-focus-color: #FFFFFF;" text="Inbox">
         <content>
            <fx:include source="receiveMessage/receive-message.fxml" />
         </content>
         <graphic>
            <FontAwesomeIconView fill="#FFFFFF" glyphName="ENVELOPE" size="20" />
         </graphic>
      </Tab>
   </tabs>
</TabPane>
