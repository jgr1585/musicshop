<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="100.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.teamd.musicshop.userclient.view.searchArticle.SearchController">
   <children>
      <HBox alignment="CENTER_LEFT" maxHeight="81.0" minHeight="-Infinity" prefHeight="81.0" style="-fx-background-color: cornflowerblue;">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="-Infinity" text="Title:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="searchByTitle" minWidth="120.0" />
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="15.0" right="5.0" top="20.0" />
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="-Infinity" text="Artist:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="searchByArtist" minWidth="120.0" />
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="15.0" right="5.0" top="20.0" />
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="-Infinity" text="Medium:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <MenuButton fx:id="searchByMedium" disable="true" minWidth="-Infinity" mnemonicParsing="false" prefWidth="80.0" style="-fx-background-color: white;" text="Select">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                        <MenuItem mnemonicParsing="false" text="Action 2" />
                     </items>
                  </MenuButton>
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="15.0" right="40.0" top="20.0" />
               </HBox.margin>
            </HBox>
            <Pane prefHeight="200.0" prefWidth="20000.0" />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button cancelButton="true" minWidth="70.0" mnemonicParsing="false" onAction="#resetSearch" style="-fx-background-color: pink;" text="Reset">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
                  <Button defaultButton="true" minWidth="70.0" mnemonicParsing="false" onAction="#searchArticle" style="-fx-background-color: lightgreen;" text="Search" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="5.0" top="20.0" />
               </HBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="20000.0">
         <content>
            <VBox fx:id="searchPane" spacing="5.0" style="-fx-background-image: url(../../73SCVNM.png);">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <children>
                  <ImageView fitHeight="491.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../73SCVNM.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
